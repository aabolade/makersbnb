<!DOCTYPE html>

<html>
<body>


	<h1>Listing information</h1>

    <%= @listing.name %><br>
    <%= @listing.description %><br>
    <%= @listing.price %><br>
		<%= @listing.city %><br>
		<%= @listing.country %><br>
		Available from:
		<%= @listing.available_from %><br>
		To:
		<%= @listing.available_until %><br>

		<%if current_user%>
			<form action= "/listings/<%= @listing.id %>/request" method="post">
				Booking from:<input type="date" name="book_from" placeholder="DD/MM/YYYY" min="<%= @listing.available_from %>" max="<%= @listing.available_until %>">
				to:<input type="date" name="book_to" placeholder="DD/MM/YYYY" min="<%= @listing.available_from %>" max="<%= @listing.available_until %>"><br>
				<input type="submit" value="Request">
			</form>
		<%end%>

</body>
</html>
