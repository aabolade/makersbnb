<!DOCTYPE html>

<html>
<body>
	<h1>Requests I have made:</h1>

	<ul id='renter_bookings'>
		<% @renter_bookings.each do |booking| %>
			<li>
				<%= booking.listing.name %>
			</li>
		<% end %>
	</ul>

	<h1>Requests I have received:</h1>

	<ul id='owner_bookings'>
		<% @owner_bookings.each do |booking| %>
			<li>
				<%= booking.listing.name %>, Requested by: <%= booking.user.name %>
				<form action="/requests/confirm" method="get">
					<input type="submit" value="Confirm">
				</form>
				<form action="/requests/deny" method="get">
					<input type="submit" value="Deny">
				</form>
			</li>
		<% end %>
	</ul>

</body>
</html>