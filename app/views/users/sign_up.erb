<body>

  <h1> Feel at home, anywhere... </h1>
  <h2> Sign up for MakersBnb </h2>

  <form class='main-form' method="POST" action="/users">

    <!-- <label for="name">Please enter your name</label></br> -->
    <input type="text" name="name" placeholder="Name*" required></br>
    <!-- <label for="email">Please enter your email</label></br> -->
    <input type="email" name="email" placeholder="Email*" required></br>
    <!-- <label for="password">Please enter your password</label></br> -->
    <input type="password" name="password" placeholder="Password*" required></br>
    <!-- <label for="password_confirm">Please confirm your password</label></br> -->
    <input type="password" name="password_confirm" placeholder="Confirm Password*" required></br>
    <input class="button" type="submit" id="submit" value="Sign Up">
</form>

<% if flash[:incorrect_password]%>
  <%= flash[:incorrect_password]%>
  <% end %>

</body>
